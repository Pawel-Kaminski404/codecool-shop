@{
    ViewData["Title"] = "Chceckout";
}

<form action="Checkout/sendCheckout" method="post">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" name="name" placeholder="Joe Doe">
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" name="email" placeholder="joe.doe@gmail.com">
    </div>
    <div class="form-group">
        <label for="phoneNumber">Phone Number</label>
        <input type="text" class="form-control" name="phoneNumber" placeholder="123456789">
    </div>
    <div class="form-group">
        <label for="address">Address</label>
        <input type="text" class="form-control" name="address" placeholder="4651 Maplewood">
    </div>
    <div class="form-group">
        <label for="zipCode">Zip code</label>
        <input type="text" class="form-control" name="zipCode" placeholder="90004-1963">
    </div>
    <div class="form-group">
        <label for="country">Country</label>
        <input type="text" class="form-control" name="country" placeholder="USA">
    </div>
    <div class="form-group">
        <label for="city">City</label>
        <input type="text" class="form-control" name="city" placeholder="Los Angeles">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>